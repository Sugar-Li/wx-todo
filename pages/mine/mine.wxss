.avatar{
	display: flex;
	/*居中对齐——纵轴  */
	justify-content: center;
	margin-top: 60rpx
}
.avatar image{
	width: 200rpx;
	height:200rpx;
	border-radius: 100%;
}

.nickName{
	text-align: center;
	color: #9b9b9b;
	font-size: 40rpx;
	margin: 10rpx 0 60rpx
}

.item{
	display: flex;
	border-bottom: 1rpx solid #ddd;
	color: #9b9b9b;
	padding: 20rpx 0;
	font-size: 36rpx
}

.item text:first-child{
	flex: 1
}
.item text:last-child{
	width:50rpx
}