.date{
	font-size: 30rpx;
	border-left: 10rpx solid #9ed321;
	padding-left: 10rpx;
	margin-top: 30rpx;
	font-weight: bold
}

/*时间和行为和todo的大筐筐  */
.history-item{
	display: flex;
	align-items: center;
	border-bottom: 1rpx solid #ddd
}

.action-icon{
	width: 100rpx;
	font-size: 30rpx
}
/*不同的行为，不同的颜色  */
.action-icon.create, .action-icon.restart{
	color: #7ed321
}
.action-icon.deleted, .action-icon.finishedAll{
	color: #9b9b9b
}

/*行为和时间都存在时的类  */
.action-with-time{
	display: flex;
	flex-direction: column
}

/* icon的flex为1 */
.action-with-time .action-icon {
  flex: 1;
}

.action-with-time .time{
	height: 30rpx;
	font-size: 30rpx;
	color: #9b9b9b

}

/*todo 才是重点啊  */
.todo{
	flex: 1
}

.empty{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center
}

.empty .title{
	font-size: 60rpx;
	margin: 200rpx 50rpx 50rpx;
	color:#ddd
}

.empty .content{
	color: #ddd;
	text-align: center
}

.action {
  font-size: 30rpx;
  padding: 20rpx 0;
}

.action.clear, .action.finishAll {
  color: #9B9B9B;
}

.action.restartAll {
  color: #7ED321;
}